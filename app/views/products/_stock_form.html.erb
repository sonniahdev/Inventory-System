<%= form_with url: stock_update_path(product), method: :patch, data: { turbo: true } do |form| %>
  <%= form.hidden_field :id, value: product.id %>
  <div class="input-group mb-2">
    <%= form.select :action, options_for_select([['Increase', 'increase'], ['Decrease', 'decrease']], selected: 'increase'), class: 'form-select' %>
    <%= form.number_field :amount, value: 1, min: 0, class: 'form-control' %>
    <%= form.submit 'Update Stock', class: 'btn btn-success' %>
  </div>
<% end %>