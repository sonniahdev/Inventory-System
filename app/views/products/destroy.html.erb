<!-- app/views/products/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @product.name %></h1>
      
      <% if @product.image.attached? %>
        <div class="mb-3">
          <%= image_tag @product.image, class: "img-fluid", style: "max-width: 400px;" %>
        </div>
      <% end %>
      
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Product Details</h5>
          
          <p><strong>Description:</strong></p>
          <p><%= @product.description %></p>
          
          <p><strong>Price:</strong> $<%= @product.price %></p>
          <p><strong>Quantity in Stock:</strong> <%= @product.quantity %></p>
        </div>
      </div>
      
      <div class="mt-3">
        <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
        
        <!-- Link to confirmation page -->
        <%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "btn btn-danger" %>

        
        <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>